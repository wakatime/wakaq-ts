{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist",
    "declaration": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "target": "es2020",
    "esModuleInterop": true,
    "removeComments": true,
    "allowJs": true,
    "checkJs": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "examples"]
}
